---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getTranslations, getLocalizedPath } from '../i18n/utils';

const t = getTranslations('de');
const localPath = (path: string) => getLocalizedPath(path, 'de');
---

<BaseLayout title="Kontakt" lang="de">
  <section class="page-hero">
    <div class="container-custom">
      <div class="page-header animate-fade-up">
        <span class="page-label">Kontakt</span>
        <h1 class="page-title">Lassen Sie uns sprechen</h1>
        <p class="page-description">
          Haben Sie Fragen oder möchten Sie ein Projekt mit uns besprechen?
          Wir freuen uns auf Ihre Nachricht.
        </p>
      </div>
    </div>
  </section>

  <section class="contact-section">
    <div class="container-custom">
      <div class="contact-grid">
        <div class="contact-form-wrapper animate-fade-up">
          <form class="contact-form" id="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required />
              </div>
              <div class="form-group">
                <label for="company">Unternehmen</label>
                <input type="text" id="company" name="company" />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="email">E-Mail *</label>
                <input type="email" id="email" name="email" required />
              </div>
              <div class="form-group">
                <label for="phone">Telefon</label>
                <input type="tel" id="phone" name="phone" />
              </div>
            </div>
            <div class="form-group">
              <label for="subject">Betreff *</label>
              <select id="subject" name="subject" required>
                <option value="">Bitte auswählen</option>
                <option value="project">Projektanfrage</option>
                <option value="partnership">Partnerschaft</option>
                <option value="support">Support</option>
                <option value="other">Sonstiges</option>
              </select>
            </div>
            <div class="form-group">
              <label for="message">Nachricht *</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <div class="form-group form-checkbox">
              <input type="checkbox" id="privacy" name="privacy" required />
              <label for="privacy">
                Ich stimme der Verarbeitung meiner Daten gemäß der <a href={localPath('datenschutz')}>Datenschutzerklärung</a> zu. *
              </label>
            </div>
            <button type="submit" class="btn-primary btn-submit">
              Nachricht senden
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>

        <aside class="contact-info animate-fade-up" style="animation-delay: 100ms;">
          <div class="info-card">
            <h3>Kontaktdaten</h3>
            <ul class="info-list">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <strong>Telefon</strong>
                  <a href="tel:+4915159428888">+49 151 59428888</a>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <strong>E-Mail</strong>
                  <a href="mailto:info@connexaline.com">info@connexaline.com</a>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <strong>Adresse</strong>
                  <span>ConnexaLine GmbH<br />Kochendorfer Straße 54<br />74172 Neckarsulm</span>
                </div>
              </li>
            </ul>
          </div>

          <div class="info-card">
            <h3>Schnelle Antwort</h3>
            <ul class="response-list">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Antwort innerhalb von 24 Stunden</span>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Unverbindliche Erstberatung</span>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Individuelle Projektplanung</span>
              </li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-background-gradient-end) 100%);
  }

  .page-header {
    max-width: 48rem;
  }

  .page-label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: 3.5rem;
    }
  }

  .page-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-muted);
  }

  .contact-section {
    padding: 4rem 0 6rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1.5fr 1fr;
    }
  }

  .contact-form {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 1.5rem;
  }

  @media (min-width: 640px) {
    .contact-form {
      padding: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .contact-form {
      padding: 2.5rem;
    }
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-foreground);
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    min-height: 2.75rem;
    font-size: 1rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    color: var(--color-foreground);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    -webkit-appearance: none;
    appearance: none;
  }

  @media (min-width: 640px) {
    .form-group input,
    .form-group select,
    .form-group textarea {
      padding: 1rem 1.25rem;
    }
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-checkbox input[type="checkbox"] {
    width: 1.25rem;
    height: 1.25rem;
    min-width: 1.25rem;
    margin-top: 0.125rem;
    cursor: pointer;
    flex-shrink: 0;
  }

  .form-checkbox label {
    font-size: 0.875rem;
    color: var(--color-muted-dark);
    margin-bottom: 0;
  }

  .form-checkbox a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .form-checkbox a:hover {
    text-decoration: underline;
  }

  .btn-submit {
    width: 100%;
    justify-content: center;
    min-height: 3rem;
    padding: 1rem 1.5rem;
    margin-top: 0.5rem;
    font-size: 1rem;
  }

  @media (min-width: 640px) {
    .btn-submit {
      font-size: 1.0625rem;
    }
  }

  .btn-submit svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .info-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 640px) {
    .info-card {
      padding: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .info-card {
      padding: 2rem;
    }
  }

  .info-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 1.25rem;
  }

  .info-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .info-list li {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.25rem;
  }

  .info-list li:last-child {
    margin-bottom: 0;
  }

  .info-list svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .info-list strong {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 0.25rem;
  }

  .info-list a,
  .info-list span {
    font-size: 0.9375rem;
    color: var(--color-muted-dark);
    text-decoration: none;
    line-height: 1.5;
  }

  .info-list a:hover {
    color: var(--color-primary);
  }

  .response-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .response-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .response-list li:last-child {
    margin-bottom: 0;
  }

  .response-list svg {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .response-list span {
    font-size: 0.9375rem;
    color: var(--color-muted-dark);
  }
</style>

<script>
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // Form submission logic would go here
    alert('Vielen Dank für Ihre Nachricht! Wir werden uns in Kürze bei Ihnen melden.');
  });
</script>
