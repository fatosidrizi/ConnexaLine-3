---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import CTASection from '../components/CTASection.astro';
import { getTranslations } from '../i18n/utils';

const t = getTranslations('de');

const projects = [
  {
    title: 'FTTH Erschließung Rhein Main',
    scope: 'Glasfaserausbau für 2.400 Haushalte inklusive Tiefbau und Hausanschlüsse.',
    location: 'Hessen',
    services: ['FTTH', 'Tiefbau', 'Aktivierung']
  },
  {
    title: 'Gewerbegebiet Vernetzung',
    scope: 'Hochgeschwindigkeitsanbindung für 35 Gewerbebetriebe mit redundanter Infrastruktur.',
    location: 'Bayern',
    services: ['Glasfaser', 'Infrastruktur']
  },
  {
    title: 'Kommunales Netzwerk Erweiterung',
    scope: 'Erweiterung des kommunalen Glasfasernetzes um 18 Kilometer Trassenlänge.',
    location: 'Baden-Württemberg',
    services: ['Tiefbau', 'Dokumentation']
  },
  {
    title: 'Wohngebiet Anbindung Stuttgart',
    scope: 'FTTH-Anschlüsse für 1.800 Wohneinheiten in einem Neubaugebiet.',
    location: 'Baden-Württemberg',
    services: ['FTTH', 'Installation', 'Aktivierung']
  },
  {
    title: 'Industriepark Connectivity',
    scope: 'Glasfaser-Backbone für 20 Industriebetriebe mit 10 Gbit/s Anbindung.',
    location: 'Nordrhein-Westfalen',
    services: ['Backbone', 'Infrastruktur']
  },
  {
    title: 'Ländlicher Breitbandausbau',
    scope: 'Erschließung von 12 ländlichen Gemeinden mit insgesamt 3.500 Haushalten.',
    location: 'Niedersachsen',
    services: ['FTTH', 'Tiefbau', 'Wartung']
  }
];
---

<BaseLayout title="Projekte" lang="de">
  <section class="page-hero">
    <div class="container-custom">
      <div class="page-header animate-fade-up">
        <span class="page-label">{t.projects.label}</span>
        <h1 class="page-title">{t.projects.title}</h1>
        <p class="page-description">{t.projects.description}</p>
      </div>
    </div>
  </section>

  <section class="projects-section">
    <div class="container-custom">
      <div class="projects-grid">
        {projects.map((project, index) => (
          <div class="project-item animate-fade-up" style={`animation-delay: ${index * 80}ms;`}>
            <ProjectCard {...project} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="stats-section">
    <div class="container-custom">
      <div class="stats-grid">
        {t.stats.items.map((stat, index) => (
          <div class="stat-item animate-fade-up" style={`animation-delay: ${index * 100}ms;`}>
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection
    title={t.cta.title}
    description={t.cta.description}
    steps={t.cta.steps}
    primaryCTA={{ text: t.cta.primaryCTA, href: '/contact' }}
    secondaryCTA={{ text: t.cta.secondaryCTA, href: '/about' }}
  />
</BaseLayout>

<style>
  .page-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-background-gradient-end) 100%);
  }

  .page-header {
    max-width: 48rem;
  }

  .page-label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: 3.5rem;
    }
  }

  .page-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-muted);
  }

  .projects-section {
    padding: 4rem 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-item {
    height: 100%;
  }

  .stats-section {
    padding: 4rem 0;
    background: var(--color-background-alt);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stat-item {
    text-align: center;
    padding: 1.5rem;
  }

  .stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9375rem;
    color: var(--color-muted-dark);
  }
</style>
