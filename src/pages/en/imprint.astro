<style>
  .legal-page {
    padding: 8rem 0 4rem;
    min-height: 100vh;
  }

  .legal-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 3rem;
  }

  .legal-content {
    max-width: 800px;
  }

  .legal-section {
    margin-bottom: 2.5rem;
  }

  .legal-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .legal-section p {
    color: var(--color-muted);
    line-height: 1.8;
    margin-bottom: 0.75rem;
  }

  .legal-section a {
    color: var(--color-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .legal-section a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .legal-section strong {
    color: var(--color-foreground);
  }
</style>
