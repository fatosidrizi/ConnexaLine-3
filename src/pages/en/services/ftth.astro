---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CTASection from '../../../components/CTASection.astro';
import { getTranslations, getLocalizedPath } from '../../../i18n/utils';

const t = getTranslations('en');
const localPath = (path: string) => getLocalizedPath(path, 'en');
---

<BaseLayout title="Fiber FTTH" lang="en">
  <section class="service-hero">
    <div class="container-custom">
      <div class="service-header animate-fade-up">
        <span class="service-label">Fiber Optic & Telecommunications</span>
        <h1 class="service-title">FTTH Expansion</h1>
        <p class="service-description">
          Professional fiber optic connections for residential and commercial properties.
          From planning through civil engineering to activation â€“ all from a single source.
        </p>
      </div>
    </div>
  </section>

  <section class="service-content">
    <div class="container-custom">
      <div class="content-grid">
        <div class="content-main">
          <div class="content-section">
            <h2>Your Benefits</h2>
            <ul class="feature-list">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Complete Solution</strong>
                  <p>From initial planning to connection activation</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Experienced Team</strong>
                  <p>Certified specialists with years of industry experience</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Quality Guarantee</strong>
                  <p>High-quality materials and certified installation procedures</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>On-Time Delivery</strong>
                  <p>Reliable project execution within the agreed timeframe</p>
                </div>
              </li>
            </ul>
          </div>

          <div class="content-section">
            <h2>Our Services in Detail</h2>

            <div class="service-detail">
              <h3>Planning and Consultation</h3>
              <p>
                We analyze local conditions, create detailed expansion plans, and
                advise you on optimal solutions for your project. We consider
                all regulatory requirements and coordinate with authorities and network operators.
              </p>
            </div>

            <div class="service-detail">
              <h3>Civil Engineering and Installation</h3>
              <p>
                Professional installation of fiber optic cables and conduits using
                trenching and plowing methods. We work with state-of-the-art technology
                and minimize disruption to residents and traffic.
              </p>
            </div>

            <div class="service-detail">
              <h3>House Connections</h3>
              <p>
                Installation of house entry points, fiber routing to the handover point,
                and professional mounting of the connection point. Including
                commissioning and functional testing.
              </p>
            </div>

            <div class="service-detail">
              <h3>Activation and Support</h3>
              <p>
                After installation is complete, we activate your connection and ensure
                everything works perfectly. We remain available for questions
                even after installation is finished.
              </p>
            </div>
          </div>
        </div>

        <aside class="content-sidebar">
          <div class="sidebar-card">
            <h3>Technical Specifications</h3>
            <dl>
              <dt>Transfer Rate</dt>
              <dd>Up to 1 Gbit/s</dd>

              <dt>Range</dt>
              <dd>Up to 20 km without amplification</dd>

              <dt>Cable Types</dt>
              <dd>Microducts, Direct Burial</dd>

              <dt>Standards</dt>
              <dd>ITU-T G.657, IEC 60794</dd>
            </dl>
          </div>

          <div class="sidebar-card">
            <h3>Interested?</h3>
            <p>Request a non-binding quote for your FTTH project now.</p>
            <a href={localPath('contact')} class="btn-primary">
              Request Now
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <CTASection
    title={t.cta.title}
    description={t.cta.description}
    primaryCTA={{ text: t.cta.primaryCTA, href: localPath('contact') }}
    secondaryCTA={{ text: t.cta.secondaryCTA, href: localPath('about') }}
  />
</BaseLayout>

<style>
  .service-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-background-gradient-end) 100%);
  }

  .service-header {
    max-width: 48rem;
  }

  .service-label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .service-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .service-title {
      font-size: 3.5rem;
    }
  }

  .service-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-muted);
  }

  .service-content {
    padding: 4rem 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .content-section {
    margin-bottom: 3rem;
  }

  .content-section h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1.5rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .feature-list li {
    display: flex;
    gap: 1rem;
  }

  .feature-list svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .feature-list strong {
    display: block;
    color: var(--color-foreground);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .feature-list p {
    color: var(--color-muted-dark);
    line-height: 1.6;
    margin: 0;
  }

  .service-detail {
    margin-bottom: 2rem;
  }

  .service-detail h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 0.75rem;
  }

  .service-detail p {
    color: var(--color-muted-dark);
    line-height: 1.7;
  }

  .sidebar-card {
    padding: 1.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    margin-bottom: 1.5rem;
  }

  .sidebar-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 1rem;
  }

  .sidebar-card p {
    color: var(--color-muted-dark);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .sidebar-card dl {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem 0.5rem;
  }

  .sidebar-card dt {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-muted);
  }

  .sidebar-card dd {
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-align: right;
    margin: 0;
  }

  .sidebar-card .btn-primary {
    width: 100%;
    justify-content: center;
  }

  .sidebar-card svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
