---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CTASection from '../../../components/CTASection.astro';
import { getTranslations } from '../../../i18n/utils';

const t = getTranslations('en');
---

<BaseLayout title="Infrastructure" lang="en">
  <section class="service-hero">
    <div class="container-custom">
      <div class="service-header animate-fade-up">
        <span class="service-label">Infrastructure & Construction</span>
        <h1 class="service-title">Network Infrastructure</h1>
        <p class="service-description">
          Civil engineering, conduit installation, and cable routes for sustainable network infrastructure.
          We build the foundation for your digital future.
        </p>
      </div>
    </div>
  </section>

  <section class="service-content">
    <div class="container-custom">
      <div class="content-grid">
        <div class="content-main">
          <div class="content-section">
            <h2>Your Benefits</h2>
            <ul class="feature-list">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Modern Technology</strong>
                  <p>State-of-the-art equipment and innovative construction methods</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Minimal Disruption</strong>
                  <p>Efficient methods to minimize impact on residents and traffic</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Comprehensive Planning</strong>
                  <p>Detailed planning including permits and coordination</p>
                </div>
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <div>
                  <strong>Future-Proof Design</strong>
                  <p>Infrastructure designed for scalability and future expansion</p>
                </div>
              </li>
            </ul>
          </div>

          <div class="content-section">
            <h2>Our Services in Detail</h2>

            <div class="service-detail">
              <h3>Civil Engineering</h3>
              <p>
                Professional excavation and trenching work for cable routes. We use
                modern techniques including horizontal directional drilling and
                micro-trenching to minimize surface disruption.
              </p>
            </div>

            <div class="service-detail">
              <h3>Conduit Installation</h3>
              <p>
                Installation of conduit systems for future-proof cable management.
                Our solutions allow for easy cable pulling and future upgrades
                without additional excavation work.
              </p>
            </div>

            <div class="service-detail">
              <h3>Cable Routes</h3>
              <p>
                Planning and construction of main cable routes and distribution points.
                We ensure optimal routing for efficiency and minimal maintenance
                requirements over the infrastructure lifetime.
              </p>
            </div>

            <div class="service-detail">
              <h3>Restoration</h3>
              <p>
                Complete surface restoration after construction work. We ensure
                that all areas are returned to their original condition or better,
                meeting all local requirements and standards.
              </p>
            </div>
          </div>
        </div>

        <aside class="content-sidebar">
          <div class="sidebar-card">
            <h3>Methods</h3>
            <dl>
              <dt>Trenching</dt>
              <dd>Open-cut installation</dd>

              <dt>HDD</dt>
              <dd>Directional drilling</dd>

              <dt>Micro-trenching</dt>
              <dd>Minimal surface impact</dd>

              <dt>Plowing</dt>
              <dd>Direct burial method</dd>
            </dl>
          </div>

          <div class="sidebar-card">
            <h3>Start Your Project</h3>
            <p>Let us help you plan and build your network infrastructure.</p>
            <a href="/en/contact" class="btn-primary">
              Get in Touch
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <CTASection
    title={t.cta.title}
    description={t.cta.description}
    primaryCTA={{ text: t.cta.primaryCTA, href: '/en/contact' }}
    secondaryCTA={{ text: t.cta.secondaryCTA, href: '/en/about' }}
  />
</BaseLayout>

<style>
  .service-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-background-gradient-end) 100%);
  }

  .service-header {
    max-width: 48rem;
  }

  .service-label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .service-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .service-title {
      font-size: 3.5rem;
    }
  }

  .service-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-muted);
  }

  .service-content {
    padding: 4rem 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .content-section {
    margin-bottom: 3rem;
  }

  .content-section h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1.5rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .feature-list li {
    display: flex;
    gap: 1rem;
  }

  .feature-list svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .feature-list strong {
    display: block;
    color: var(--color-foreground);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .feature-list p {
    color: var(--color-muted-dark);
    line-height: 1.6;
    margin: 0;
  }

  .service-detail {
    margin-bottom: 2rem;
  }

  .service-detail h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 0.75rem;
  }

  .service-detail p {
    color: var(--color-muted-dark);
    line-height: 1.7;
  }

  .sidebar-card {
    padding: 1.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    margin-bottom: 1.5rem;
  }

  .sidebar-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 1rem;
  }

  .sidebar-card p {
    color: var(--color-muted-dark);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .sidebar-card dl {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem 0.5rem;
  }

  .sidebar-card dt {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-muted);
  }

  .sidebar-card dd {
    font-size: 0.875rem;
    color: var(--color-foreground);
    text-align: right;
    margin: 0;
  }

  .sidebar-card .btn-primary {
    width: 100%;
    justify-content: center;
  }

  .sidebar-card svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
