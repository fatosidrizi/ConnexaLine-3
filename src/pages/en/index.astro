---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsSection from '../../components/StatsSection.astro';
import PartnersSection from '../../components/PartnersSection.astro';
import ValuePropsSection from '../../components/ValuePropsSection.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ProcessSteps from '../../components/ProcessSteps.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import TestimonialsSection from '../../components/TestimonialsSection.astro';
import CTASection from '../../components/CTASection.astro';
import { getTranslations, getLocalizedPath } from '../../i18n/utils';

const t = getTranslations('en');
const localPath = (path: string) => getLocalizedPath(path, 'en');

const services = [
  {
    title: t.services.fiber.title,
    description: t.services.fiber.description,
    href: localPath('services/ftth'),
    icon: 'fiber',
    learnMore: t.services.learnMore
  },
  {
    title: t.services.infrastructure.title,
    description: t.services.infrastructure.description,
    href: localPath('services/infrastructure'),
    icon: 'infrastructure',
    learnMore: t.services.learnMore
  },
  {
    title: t.services.maintenance.title,
    description: t.services.maintenance.description,
    href: localPath('services/maintenance'),
    icon: 'maintenance',
    learnMore: t.services.learnMore
  }
];

const projects = t.projects.items;
---

<BaseLayout title={t.meta.homeTitle} lang="en">
  <Hero
    headline={t.hero.headline}
    subheadline={t.hero.subheadline}
    primaryCTA={{ text: t.hero.primaryCTA, href: localPath('contact') }}
    secondaryCTA={{ text: t.hero.secondaryCTA, href: '#services' }}
  />

  <ValuePropsSection
    label={t.valueProps.label}
    title={t.valueProps.title}
    description={t.valueProps.description}
    items={t.valueProps.items}
  />

  <!-- Stats Section -->
  <StatsSection
    label={t.stats.label}
    items={t.stats.items}
  />

  <!-- Partners Section -->
  <PartnersSection lang="en" />

  <!-- Services Section -->
  <section id="services" class="services-section">
    <div class="container-custom">
      <SectionHeader
        label={t.services.label}
        title={t.services.title}
        description={t.services.description}
      />

      <div class="services-grid">
        {services.map((service, index) => (
          <div style={`transition-delay: ${index * 80}ms;`}>
            <ServiceCard {...service} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <div class="process-wrapper">
    <ProcessSteps
      label={t.process.label}
      title={t.process.title}
      description={t.process.description}
      steps={t.process.steps}
    />
  </div>

  <!-- Featured Projects Section -->
  <section class="projects-section">
    <div class="container-custom">
      <SectionHeader
        label={t.projects.label}
        title={t.projects.title}
        description={t.projects.description}
      />

      <div class="projects-grid">
        {projects.map((project, index) => (
          <div style={`transition-delay: ${index * 80}ms;`}>
            <ProjectCard {...project} />
          </div>
        ))}
      </div>

      <div class="projects-link animate-fade-up">
        <a href={localPath('projects')}>
          {t.projects.viewAll}
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <TestimonialsSection
    label={t.testimonials.label}
    title={t.testimonials.title}
    description={t.testimonials.description}
    items={t.testimonials.items}
  />

  <!-- CTA Section -->
  <CTASection
    title={t.cta.title}
    description={t.cta.description}
    steps={t.cta.steps}
    primaryCTA={{ text: t.cta.primaryCTA, href: localPath('contact') }}
    secondaryCTA={{ text: t.cta.secondaryCTA, href: localPath('about') }}
  />
</BaseLayout>

<style>
  .services-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, var(--color-background-gradient-start) 0%, var(--color-background-gradient-end) 100%);
  }

  @media (min-width: 1024px) {
    .services-section {
      padding: 7rem 0;
    }
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .services-grid > div {
    height: 100%;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .process-wrapper {
    background: var(--color-background-alt);
  }

  .projects-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, var(--color-background-gradient-end) 0%, var(--color-background-gradient-start) 100%);
  }

  @media (min-width: 1024px) {
    .projects-section {
      padding: 7rem 0;
    }
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .projects-grid > div {
    height: 100%;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .projects-link {
    margin-top: 3rem;
    text-align: center;
  }

  .projects-link a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: gap 0.2s ease;
  }

  .projects-link a:hover {
    gap: 0.75rem;
  }

  .projects-link svg {
    width: 1.125rem;
    height: 1.125rem;
  }
</style>
