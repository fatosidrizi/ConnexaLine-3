---
export interface Props {
  title: string;
  scope: string;
  location: string;
  services: string[];
}

const { title, scope, location, services } = Astro.props;
---

<div class="project-card animate-fade-up">
  <div class="project-card-header">
    <h3 class="project-card-title">{title}</h3>
    <span class="project-card-location">{location}</span>
  </div>
  
  <p class="project-card-scope">{scope}</p>
  
  <div class="project-card-services">
    {services.map((service) => (
      <span class="project-card-tag">{service}</span>
    ))}
  </div>
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    padding: 1.75rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    transition: all 0.3s ease;
    height: 100%;
  }
  
  .project-card:hover {
    border-color: rgba(30, 200, 232, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px -12px rgba(30, 200, 232, 0.2);
  }
  
  .project-card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }
  
  .project-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
    transition: color 0.2s ease;
  }

  .project-card:hover .project-card-title {
    color: var(--color-primary);
  }

  .project-card-location {
    flex-shrink: 0;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    background: rgba(30, 200, 232, 0.1);
    border-radius: 9999px;
  }

  .project-card-scope {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-muted-dark);
    margin-bottom: 1.25rem;
    flex: 1;
  }

  .project-card-services {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .project-card-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    background: var(--color-border);
    border-radius: 0.375rem;
  }
</style>
