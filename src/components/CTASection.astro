---
export interface Props {
  title: string;
  description: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { title, description, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="cta-section">
  <div class="container-custom">
    <div class="cta-card animate-fade-up">
      <div class="cta-bg"></div>
      <div class="cta-grid"></div>
      
      <div class="cta-content">
        <h2 class="cta-title">{title}</h2>
        <p class="cta-description">{description}</p>
        
        <div class="cta-actions">
          {primaryCTA && (
            <a href={primaryCTA.href} class="btn-primary">
              {primaryCTA.text}
              <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )}
          
          {secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary">{secondaryCTA.text}</a>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 5rem 0;
  }
  
  @media (min-width: 1024px) {
    .cta-section {
      padding: 7rem 0;
    }
  }
  
  .cta-card {
    position: relative;
    padding: 3.5rem 2rem;
    background: #12161B;
    border: 1px solid rgba(30, 200, 232, 0.15);
    border-radius: 1.5rem;
    text-align: center;
    overflow: hidden;
  }
  
  @media (min-width: 640px) {
    .cta-card {
      padding: 4.5rem 3rem;
    }
  }
  
  .cta-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 60% 50% at 50% -10%, rgba(30, 200, 232, 0.15), transparent);
    pointer-events: none;
  }
  
  .cta-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(ellipse 50% 50% at 50% 50%, black, transparent);
    pointer-events: none;
  }
  
  .cta-content {
    position: relative;
    z-index: 10;
    max-width: 36rem;
    margin: 0 auto;
  }
  
  .cta-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
  }
  
  @media (min-width: 640px) {
    .cta-title {
      font-size: 2.25rem;
    }
  }
  
  .cta-description {
    margin-top: 1rem;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #6B7280;
  }
  
  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
</style>
