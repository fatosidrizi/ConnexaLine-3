---
export interface Props {
  title: string;
  description: string;
  steps?: string[];
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { title, description, steps, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="cta-section">
  <div class="container-custom">
    <div class="cta-card animate-fade-up">
      <div class="cta-bg"></div>
      <div class="cta-grid"></div>
      
      <div class="cta-content">
        <div class="cta-text">
          <h2 class="cta-title">{title}</h2>
          <p class="cta-description">{description}</p>

          {steps && steps.length > 0 && (
            <div class="cta-steps" aria-label="What to expect">
              {steps.map((step) => (
                <span class="cta-step">{step}</span>
              ))}
            </div>
          )}
        </div>

        <div class="cta-actions">
          {primaryCTA && (
            <a href={primaryCTA.href} class="btn-primary">
              {primaryCTA.text}
              <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )}
          
          {secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary">{secondaryCTA.text}</a>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 5rem 0;
  }
  
  @media (min-width: 1024px) {
    .cta-section {
      padding: 7rem 0;
    }
  }
  
  .cta-card {
    position: relative;
    padding: 3.75rem 2.25rem;
    background: linear-gradient(180deg, rgba(13, 23, 31, 0.92), rgba(11, 18, 24, 0.96));
    border: 1px solid rgba(30, 200, 232, 0.14);
    border-radius: 1.75rem;
    text-align: left;
    overflow: hidden;
    box-shadow: 0 30px 80px -60px rgba(0, 0, 0, 0.75);
  }

  :global(.light) .cta-card {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.98), rgba(248, 250, 252, 0.98));
    border: 1px solid rgba(14, 165, 199, 0.2);
    box-shadow: 0 20px 50px -40px rgba(0, 0, 0, 0.15);
  }
  
  @media (min-width: 640px) {
    .cta-card {
      padding: 4.75rem 3.5rem;
    }
  }

  .cta-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    border: 1px solid rgba(255, 255, 255, 0.06);
    pointer-events: none;
  }

  :global(.light) .cta-card::after {
    border: 1px solid rgba(14, 165, 199, 0.08);
  }
  
  .cta-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 70% 55% at 50% -10%, rgba(30, 200, 232, 0.16), transparent 60%),
      radial-gradient(ellipse 70% 60% at 100% 50%, rgba(56, 189, 248, 0.08), transparent 65%),
      radial-gradient(ellipse 60% 55% at 20% 110%, rgba(124, 58, 237, 0.06), transparent 60%);
    pointer-events: none;
  }

  :global(.light) .cta-bg {
    background:
      radial-gradient(ellipse 70% 55% at 50% -10%, rgba(14, 165, 199, 0.08), transparent 60%),
      radial-gradient(ellipse 70% 60% at 100% 50%, rgba(56, 189, 248, 0.04), transparent 65%),
      radial-gradient(ellipse 60% 55% at 20% 110%, rgba(124, 58, 237, 0.03), transparent 60%);
  }
  
  .cta-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 56px 56px;
    mask-image: radial-gradient(ellipse 60% 55% at 50% 50%, black, transparent);
    opacity: 0.6;
    pointer-events: none;
  }

  :global(.light) .cta-grid {
    background-image: 
      linear-gradient(rgba(14, 165, 199, 0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(14, 165, 199, 0.04) 1px, transparent 1px);
    opacity: 0.4;
  }
  
  .cta-content {
    position: relative;
    z-index: 10;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .cta-content {
      grid-template-columns: minmax(0, 1.5fr) minmax(0, 0.5fr);
      gap: 3rem;
    }
  }

  .cta-text {
    max-width: 46rem;
  }
  
  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
  }
  
  @media (min-width: 640px) {
    .cta-title {
      font-size: 2.25rem;
    }
  }
  
  .cta-description {
    margin-top: 1rem;
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--color-muted);
  }
  
  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 0.85rem;
    margin-top: 0;
  }

  @media (max-width: 767px) {
    .cta-card {
      text-align: center;
    }

    .cta-actions {
      justify-content: center;
    }

    .cta-text {
      margin-left: auto;
      margin-right: auto;
    }
  }

  .cta-steps {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 2rem;
    color: var(--color-muted);
    justify-content: flex-start;
  }

  .cta-step {
    position: relative;
    font-size: 0.9rem;
    color: var(--color-muted);
    padding: 0.15rem 0.25rem;
    letter-spacing: -0.01em;
  }

  .cta-step:not(:last-child)::after {
    content: 'â€¢';
    margin-left: 0.6rem;
    color: var(--color-muted-dark);
  }

  @media (max-width: 767px) {
    .cta-steps {
      justify-content: center;
    }
  }

  :global(.light) .cta-step {
    color: var(--color-muted);
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
</style>
