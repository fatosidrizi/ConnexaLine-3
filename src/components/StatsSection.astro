---
export interface StatItem {
  value: string;
  label: string;
}

export interface Props {
  label?: string;
  items: StatItem[];
}

const { label, items } = Astro.props;
---

<section class="stats-section">
  <div class="container-custom">
    {label && (
      <p class="stats-label animate-fade-up">{label}</p>
    )}
    <div class="stats-grid">
      {items.map((stat, index) => (
        <div class="stat-item animate-fade-up" style={`transition-delay: ${index * 100}ms;`}>
          <span class="stat-value" data-value={stat.value}>{stat.value}</span>
          <span class="stat-label">{stat.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 4rem 0;
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 1024px) {
    .stats-section {
      padding: 5rem 0;
    }
  }

  .stats-label {
    text-align: center;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 2.5rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    line-height: 1;
  }

  @media (min-width: 640px) {
    .stat-value {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .stat-value {
      font-size: 3.5rem;
    }
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-muted);
    max-width: 10rem;
    line-height: 1.4;
  }

  @media (min-width: 640px) {
    .stat-label {
      font-size: 0.9375rem;
    }
  }
</style>
