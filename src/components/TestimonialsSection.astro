---
export interface TestimonialItem {
  quote: string;
  name: string;
  role: string;
}

export interface Props {
  label: string;
  title: string;
  description?: string;
  items: TestimonialItem[];
}

const { label, title, description, items } = Astro.props;
---

<section class="testimonials-section">
  <div class="container-custom">
    <div class="testimonials-header animate-fade-up">
      <span class="testimonials-label">{label}</span>
      <h2 class="testimonials-title">{title}</h2>
      {description && <p class="testimonials-description">{description}</p>}
    </div>

    <div class="testimonials-grid">
      {items.map((item, index) => (
        <figure class="testimonial-card animate-fade-up" style={`transition-delay: ${index * 100}ms;`}>
          <div class="testimonial-bg"></div>
          <blockquote class="testimonial-quote">“{item.quote}”</blockquote>
          <figcaption class="testimonial-meta">
            <span class="testimonial-name">{item.name}</span>
            <span class="testimonial-role">{item.role}</span>
          </figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 5rem 0;
    background: var(--color-background);
  }

  @media (min-width: 1024px) {
    .testimonials-section {
      padding: 6.5rem 0;
    }
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 2.75rem;
  }

  @media (min-width: 1024px) {
    .testimonials-header {
      margin-bottom: 3.25rem;
    }
  }

  .testimonials-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .testimonials-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
  }

  @media (min-width: 640px) {
    .testimonials-title {
      font-size: 2.25rem;
    }
  }

  .testimonials-description {
    margin-top: 0.9rem;
    font-size: 1.0625rem;
    color: var(--color-muted-dark);
    max-width: 46rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  .testimonial-card {
    position: relative;
    border-radius: 1.25rem;
    padding: 2rem;
    margin: 0;
    overflow: hidden;
    background: var(--color-surface);
    border: 1px solid rgba(30, 200, 232, 0.12);
  }

  .testimonial-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 60% 50% at 20% 0%, rgba(30, 200, 232, 0.14), transparent),
      radial-gradient(ellipse 60% 50% at 80% 100%, rgba(124, 58, 237, 0.08), transparent);
    pointer-events: none;
  }

  .testimonial-quote {
    position: relative;
    z-index: 1;
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-foreground);
    letter-spacing: -0.01em;
  }

  @media (min-width: 640px) {
    .testimonial-quote {
      font-size: 1.125rem;
    }
  }

  .testimonial-meta {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-top: 1.25rem;
  }

  .testimonial-name {
    font-weight: 600;
    color: var(--color-foreground);
  }

  .testimonial-role {
    font-size: 0.9375rem;
    color: var(--color-muted);
  }
</style>
