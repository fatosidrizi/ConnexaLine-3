---
export interface Step {
  number: string;
  title: string;
  description: string;
}

export interface Props {
  label?: string;
  title?: string;
  description?: string;
  steps?: Step[];
}

const defaultSteps: Step[] = [
  {
    number: '01',
    title: 'Anfrage und Beratung',
    description: 'Wir analysieren Ihre Anforderungen und entwickeln ein maßgeschneidertes Konzept.'
  },
  {
    number: '02',
    title: 'Planung und Dokumentation',
    description: 'Detaillierte Planung inklusive Genehmigungen und technischer Dokumentation.'
  },
  {
    number: '03',
    title: 'Umsetzung',
    description: 'Professionelle Ausführung durch erfahrene Fachkräfte nach höchsten Standards.'
  },
  {
    number: '04',
    title: 'Qualitätskontrolle',
    description: 'Umfassende Prüfung und Dokumentation aller durchgeführten Arbeiten.'
  },
  {
    number: '05',
    title: 'Übergabe und Support',
    description: 'Vollständige Projektübergabe mit Dokumentation und langfristigem Support.'
  }
];

const {
  label = 'Unser Prozess',
  title = 'Von der Anfrage bis zur Übergabe',
  description = 'Ein strukturierter Ablauf für maximale Transparenz und Qualität.',
  steps = defaultSteps
} = Astro.props;
---

<section class="process-section">
  <div class="container-custom">
    <div class="process-header">
      <span class="process-label animate-fade-up">{label}</span>
      <h2 class="process-title animate-fade-up">{title}</h2>
      <p class="process-description animate-fade-up">
        {description}
      </p>
    </div>

    <div class="process-grid">
      {steps.map((step, index) => (
        <div class="process-step animate-fade-up" style={`transition-delay: ${(index + 1) * 80}ms;`}>
          <div class="process-step-header">
            <span class="process-step-number">{step.number}</span>
            {index < steps.length - 1 && <div class="process-step-connector"></div>}
            {index < steps.length - 1 && <div class="process-step-connector-mobile"></div>}
          </div>
          <div class="process-step-content">
            <h3 class="process-step-title">{step.title}</h3>
            <p class="process-step-description">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .process-section {
    padding: 5rem 0;
  }

  @media (min-width: 1024px) {
    .process-section {
      padding: 7rem 0;
    }
  }

  .process-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .process-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .process-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .process-title {
      font-size: 2.5rem;
    }
  }

  .process-description {
    font-size: 1.0625rem;
    color: var(--color-muted-dark);
    max-width: 32rem;
    margin: 0 auto;
  }

  .process-grid {
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
    padding-left: 2rem;
  }

  @media (min-width: 768px) {
    .process-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      padding-left: 0;
    }
  }

  @media (min-width: 1024px) {
    .process-grid {
      grid-template-columns: repeat(5, 1fr);
      gap: 0;
    }
  }

  .process-step {
    position: relative;
    padding: 0 0 2rem 1.5rem;
    text-align: left;
    display: flex;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .process-step {
      padding: 1.5rem;
      text-align: center;
      flex-direction: column;
      gap: 0;
    }
  }

  @media (min-width: 1024px) {
    .process-step {
      padding: 1.5rem 1rem;
    }
  }

  .process-step-header {
    position: relative;
    display: flex;
    justify-content: flex-start;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .process-step-header {
      justify-content: center;
      margin-bottom: 1.5rem;
    }
  }

  .process-step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(30, 200, 232, 0.1);
    border: 2px solid rgba(30, 200, 232, 0.3);
    border-radius: 50%;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-primary);
    position: relative;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .process-step-number {
      width: 3.5rem;
      height: 3.5rem;
      font-size: 1.125rem;
    }
  }

  .process-step-connector {
    display: none;
  }

  @media (min-width: 1024px) {
    .process-step-connector {
      display: block;
      position: absolute;
      top: 50%;
      left: calc(50% + 2rem);
      width: calc(100% - 2rem);
      height: 2px;
      background: linear-gradient(90deg, rgba(30, 200, 232, 0.3), rgba(30, 200, 232, 0.1));
      transform: translateY(-50%);
    }
  }

  .process-step-connector-mobile {
    display: block;
    position: absolute;
    left: -0.75rem;
    top: 2.5rem;
    width: 2px;
    height: calc(100% - 0.5rem);
    background: linear-gradient(180deg, rgba(30, 200, 232, 0.3), rgba(30, 200, 232, 0.1));
  }

  @media (min-width: 768px) {
    .process-step-connector-mobile {
      display: none;
    }
  }

  .process-step-content {
    flex: 1;
    padding-top: 0.25rem;
  }

  @media (min-width: 768px) {
    .process-step-content {
      padding-top: 0;
    }
  }

  .process-step-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 0.375rem;
  }

  @media (min-width: 768px) {
    .process-step-title {
      font-size: 1.0625rem;
      margin-bottom: 0.5rem;
    }
  }

  .process-step-description {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--color-muted-dark);
  }

  @media (min-width: 768px) {
    .process-step-description {
      font-size: 0.875rem;
      line-height: 1.6;
    }
  }
</style>
