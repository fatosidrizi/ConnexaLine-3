---
export interface Props {
  headline: string;
  subheadline: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { headline, subheadline, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="hero">
  <div class="hero-image" aria-hidden="true"></div>
  <div class="hero-bg"></div>
  <div class="hero-grid"></div>
  
  <div class="container-custom hero-content">
    <div class="hero-inner">
      <h1 class="hero-headline animate-fade-up">
        {headline}
      </h1>
      
      <p class="hero-subheadline animate-fade-up">
        {subheadline}
      </p>
      
      <div class="hero-actions animate-fade-up">
        {primaryCTA && (
          <a href={primaryCTA.href} class="btn-primary">
            {primaryCTA.text}
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        )}
        
        {secondaryCTA && (
          <a href={secondaryCTA.href} class="btn-secondary">
            {secondaryCTA.text}
          </a>
        )}
      </div>
    </div>
  </div>
  
  <div class="hero-scroll-indicator">
    <div class="hero-scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    overflow: hidden;
  }

  /* Optimized background layers for depth */
  .hero-image {
    position: absolute;
    inset: 0;
    background-image: url('/images/hero/fiber-network-hero.svg');
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    opacity: 0.7;
    mix-blend-mode: screen;
    filter: saturate(1.1) contrast(1.08);
    pointer-events: none;
    z-index: 1;
  }

  :global(.light) .hero-image {
    opacity: 0.35;
    mix-blend-mode: normal;
    filter: saturate(1.15) contrast(1.1) brightness(0.95);
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: 
      radial-gradient(ellipse 65% 45% at 50% -15%, rgba(30, 200, 232, 0.12), transparent 70%),
      radial-gradient(ellipse 55% 35% at 85% 50%, rgba(56, 189, 248, 0.06), transparent 65%);
    pointer-events: none;
  }

  :global(.light) .hero-bg {
    background: 
      radial-gradient(ellipse 65% 45% at 50% -15%, rgba(14, 165, 199, 0.08), transparent 70%),
      radial-gradient(ellipse 55% 35% at 85% 50%, rgba(56, 189, 248, 0.04), transparent 65%);
  }
  
  .hero-grid {
    position: absolute;
    inset: 0;
    z-index: 3;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 72px 72px;
    mask-image: radial-gradient(ellipse 65% 55% at 50% 50%, black, transparent);
    opacity: 0.35;
    pointer-events: none;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }
  
  .hero-inner {
    max-width: 54rem;
  }
  
  .hero-headline {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    line-height: 1.15;
    background: linear-gradient(135deg, var(--color-foreground) 0%, var(--color-foreground) 60%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0;
  }

  @media (min-width: 640px) {
    .hero-headline {
      font-size: 3.75rem;
      line-height: 1.1;
    }
  }

  @media (min-width: 1024px) {
    .hero-headline {
      font-size: 4.5rem;
      letter-spacing: -0.03em;
    }
  }

  .hero-subheadline {
    margin-top: 1.5rem;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-muted);
    max-width: 38rem;
    font-weight: 400;
  }

  @media (min-width: 640px) {
    .hero-subheadline {
      margin-top: 2rem;
      font-size: 1.25rem;
      line-height: 1.75;
    }
  }
  
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2.5rem;
  }
  
  @media (min-width: 640px) {
    .hero-actions {
      margin-top: 3rem;
    }
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
  
  .hero-scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 5;
  }
  
  .hero-scroll-line {
    width: 1px;
    height: 4rem;
    background: linear-gradient(to bottom, var(--color-primary), transparent);
    opacity: 0.5;
    animation: scrollLine 2s ease-in-out infinite;
  }
  
  @keyframes scrollLine {
    0% { transform: scaleY(0); transform-origin: top; opacity: 0; }
    30% { transform: scaleY(1); transform-origin: top; opacity: 1; }
    70% { transform: scaleY(1); transform-origin: bottom; opacity: 1; }
    100% { transform: scaleY(0); transform-origin: bottom; opacity: 0; }
  }
</style>
