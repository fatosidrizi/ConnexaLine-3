---
export interface Props {
  headline: string;
  subheadline: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { headline, subheadline, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="hero">
  <div class="hero-network" aria-hidden="true">
    <svg class="network-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 1080" preserveAspectRatio="xMidYMid slice">
      <!-- Network nodes and connections -->
      <defs>
        <filter id="glow">
          <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
          <feMerge>
            <feMergeNode in="coloredBlur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>
      </defs>
      
      <!-- Connections -->
      <g class="connections" opacity="0.2">
        <line x1="200" y1="150" x2="450" y2="300" class="connection" />
        <line x1="450" y1="300" x2="800" y2="250" class="connection connection-delay-1" />
        <line x1="800" y1="250" x2="1100" y2="400" class="connection connection-delay-2" />
        <line x1="1100" y1="400" x2="1400" y2="300" class="connection connection-delay-3" />
        <line x1="1400" y1="300" x2="1700" y2="500" class="connection" />
        
        <line x1="300" y1="600" x2="600" y2="550" class="connection connection-delay-1" />
        <line x1="600" y1="550" x2="900" y2="700" class="connection connection-delay-2" />
        <line x1="900" y1="700" x2="1200" y2="650" class="connection" />
        <line x1="1200" y1="650" x2="1500" y2="800" class="connection connection-delay-3" />
        
        <line x1="200" y1="150" x2="300" y2="600" class="connection connection-delay-2" />
        <line x1="450" y1="300" x2="600" y2="550" class="connection" />
        <line x1="800" y1="250" x2="900" y2="700" class="connection connection-delay-1" />
        <line x1="1100" y1="400" x2="1200" y2="650" class="connection connection-delay-3" />
      </g>
      
      <!-- Nodes -->
      <g class="nodes">
        <circle cx="200" cy="150" r="4" class="node" />
        <circle cx="450" cy="300" r="4" class="node node-delay-1" />
        <circle cx="800" cy="250" r="4" class="node node-delay-2" />
        <circle cx="1100" cy="400" r="4" class="node" />
        <circle cx="1400" cy="300" r="4" class="node node-delay-1" />
        <circle cx="1700" cy="500" r="4" class="node node-delay-2" />
        
        <circle cx="300" cy="600" r="4" class="node node-delay-2" />
        <circle cx="600" cy="550" r="4" class="node" />
        <circle cx="900" cy="700" r="4" class="node node-delay-1" />
        <circle cx="1200" cy="650" r="4" class="node node-delay-2" />
        <circle cx="1500" cy="800" r="4" class="node" />
      </g>
    </svg>
  </div>
  <div class="hero-bg"></div>
  
  <div class="container-custom hero-content">
    <div class="hero-inner">
      <h1 class="hero-headline animate-fade-up">
        {headline}
      </h1>
      
      <p class="hero-subheadline animate-fade-up">
        {subheadline}
      </p>
      
      <div class="hero-actions animate-fade-up">
        {primaryCTA && (
          <a href={primaryCTA.href} class="btn-primary">
            {primaryCTA.text}
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        )}
        
        {secondaryCTA && (
          <a href={secondaryCTA.href} class="btn-secondary">
            {secondaryCTA.text}
          </a>
        )}
      </div>
    </div>
  </div>
  
  <div class="hero-scroll-indicator">
    <div class="hero-scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    padding-bottom: 2rem;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 100vh;
      padding-bottom: 0;
    }
  }

  /* Network grid background */
  .hero-network {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
    opacity: 0.25;
  }

  .network-svg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .connection {
    stroke: var(--color-primary);
    stroke-width: 1;
    stroke-linecap: round;
    animation: connectionPulse 4s ease-in-out infinite;
  }

  .connection-delay-1 {
    animation-delay: 1s;
  }

  .connection-delay-2 {
    animation-delay: 2s;
  }

  .connection-delay-3 {
    animation-delay: 3s;
  }

  .node {
    fill: var(--color-primary);
    filter: url(#glow);
    animation: nodePulse 3s ease-in-out infinite;
  }

  .node-delay-1 {
    animation-delay: 1s;
  }

  .node-delay-2 {
    animation-delay: 2s;
  }

  :global(.light) .connection {
    stroke: rgba(14, 165, 199, 0.8);
  }

  :global(.light) .node {
    fill: rgba(14, 165, 199, 0.9);
  }

  @keyframes connectionPulse {
    0%, 100% {
      opacity: 0.1;
      stroke-width: 1;
    }
    50% {
      opacity: 0.3;
      stroke-width: 1.5;
    }
  }

  @keyframes nodePulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.3);
    }
  }

  @media (max-width: 768px) {
    .hero-network {
      opacity: 0.15;
    }
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(30, 200, 232, 0.03), transparent 60%),
      radial-gradient(ellipse at 70% 80%, rgba(56, 189, 248, 0.02), transparent 60%);
    pointer-events: none;
  }

  :global(.light) .hero-bg {
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(14, 165, 199, 0.03), transparent 60%),
      radial-gradient(ellipse at 70% 80%, rgba(56, 189, 248, 0.02), transparent 60%);
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }
  
  .hero-inner {
    max-width: 54rem;
  }
  
  .hero-headline {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    line-height: 1.2;
    background: linear-gradient(135deg, var(--color-foreground) 0%, var(--color-foreground) 60%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0;
  }

  @media (min-width: 480px) {
    .hero-headline {
      font-size: 2.5rem;
      line-height: 1.15;
    }
  }

  @media (min-width: 640px) {
    .hero-headline {
      font-size: 3.75rem;
      line-height: 1.1;
    }
  }

  @media (min-width: 1024px) {
    .hero-headline {
      font-size: 4.5rem;
      letter-spacing: -0.03em;
    }
  }

  .hero-subheadline {
    margin-top: 1.25rem;
    font-size: 1.0625rem;
    line-height: 1.65;
    color: var(--color-muted);
    max-width: 32rem;
    font-weight: 400;
  }

  @media (min-width: 480px) {
    .hero-subheadline {
      font-size: 1.125rem;
      max-width: 36rem;
    }
  }

  @media (min-width: 640px) {
    .hero-subheadline {
      margin-top: 2rem;
      font-size: 1.25rem;
      line-height: 1.75;
      max-width: 38rem;
    }
  }
  
  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  @media (min-width: 480px) {
    .hero-actions {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
      margin-top: 2.5rem;
    }
  }
  
  @media (min-width: 640px) {
    .hero-actions {
      margin-top: 3rem;
    }
  }

  .hero-actions .btn-primary,
  .hero-actions .btn-secondary {
    width: 100%;
    justify-content: center;
  }

  @media (min-width: 480px) {
    .hero-actions .btn-primary,
    .hero-actions .btn-secondary {
      width: auto;
    }
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
  
  .hero-scroll-indicator {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 5;
  }

  @media (min-width: 768px) {
    .hero-scroll-indicator {
      bottom: 2rem;
    }
  }
  
  .hero-scroll-line {
    width: 2px;
    height: 3rem;
    background: linear-gradient(to bottom, var(--color-primary), transparent);
    opacity: 0.6;
    animation: scrollLine 2s ease-in-out infinite;
  }

  @media (min-width: 768px) {
    .hero-scroll-line {
      width: 1px;
      height: 4rem;
      opacity: 0.5;
    }
  }
  
  @keyframes scrollLine {
    0% { transform: scaleY(0); transform-origin: top; opacity: 0; }
    30% { transform: scaleY(1); transform-origin: top; opacity: 1; }
    70% { transform: scaleY(1); transform-origin: bottom; opacity: 1; }
    100% { transform: scaleY(0); transform-origin: bottom; opacity: 0; }
  }
</style>
