---
export interface Props {
  headline: string;
  subheadline: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { headline, subheadline, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="hero">
  <div class="hero-strands" aria-hidden="true">
    <div class="fiber-strand fiber-strand-1"></div>
    <div class="fiber-strand fiber-strand-2"></div>
    <div class="fiber-strand fiber-strand-3"></div>
    <div class="fiber-strand fiber-strand-4 fiber-strand-animated"></div>
  </div>
  <div class="hero-bg"></div>
  
  <div class="container-custom hero-content">
    <div class="hero-inner">
      <h1 class="hero-headline animate-fade-up">
        {headline}
      </h1>
      
      <p class="hero-subheadline animate-fade-up">
        {subheadline}
      </p>
      
      <div class="hero-actions animate-fade-up">
        {primaryCTA && (
          <a href={primaryCTA.href} class="btn-primary">
            {primaryCTA.text}
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        )}
        
        {secondaryCTA && (
          <a href={secondaryCTA.href} class="btn-secondary">
            {secondaryCTA.text}
          </a>
        )}
      </div>
    </div>
  </div>
  
  <div class="hero-scroll-indicator">
    <div class="hero-scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    padding-bottom: 2rem;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 100vh;
      padding-bottom: 0;
    }
  }

  /* Diagonal fiber strands */
  .hero-strands {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }

  .fiber-strand {
    position: absolute;
    width: 1px;
    height: 150%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(30, 200, 232, 0.12) 20%,
      rgba(30, 200, 232, 0.08) 50%,
      rgba(30, 200, 232, 0.12) 80%,
      transparent 100%
    );
    transform: rotate(45deg);
    transform-origin: center;
  }

  :global(.light) .fiber-strand {
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(14, 165, 199, 0.15) 20%,
      rgba(14, 165, 199, 0.1) 50%,
      rgba(14, 165, 199, 0.15) 80%,
      transparent 100%
    );
  }

  .fiber-strand-1 {
    left: 20%;
    top: -25%;
  }

  .fiber-strand-2 {
    left: 45%;
    top: -25%;
    opacity: 0.7;
  }

  .fiber-strand-3 {
    left: 70%;
    top: -25%;
    opacity: 0.5;
  }

  .fiber-strand-4 {
    left: 82%;
    top: -25%;
    opacity: 0.8;
  }

  /* Animated fiber strand with light pulse */
  .fiber-strand-animated {
    width: 2px;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(30, 200, 232, 0.2) 20%,
      rgba(56, 189, 248, 0.15) 50%,
      rgba(30, 200, 232, 0.2) 80%,
      transparent 100%
    );
  }

  :global(.light) .fiber-strand-animated {
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(14, 165, 199, 0.15) 20%,
      rgba(56, 189, 248, 0.1) 50%,
      rgba(14, 165, 199, 0.15) 80%,
      transparent 100%
    );
  }

  .fiber-strand-animated::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    width: 8px;
    height: 40px;
    margin-left: -4px;
    background: radial-gradient(
      ellipse at center,
      rgba(30, 200, 232, 0.6) 0%,
      rgba(56, 189, 248, 0.4) 30%,
      transparent 70%
    );
    filter: blur(4px);
    animation: pulse-travel 8s ease-in-out infinite;
  }

  :global(.light) .fiber-strand-animated::after {
    background: radial-gradient(
      ellipse at center,
      rgba(14, 165, 199, 0.5) 0%,
      rgba(56, 189, 248, 0.3) 30%,
      transparent 70%
    );
  }

  @keyframes pulse-travel {
    0%, 100% {
      top: -10%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 110%;
      opacity: 0;
    }
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: 
      radial-gradient(ellipse 60% 40% at 50% -10%, rgba(30, 200, 232, 0.08), transparent 70%);
    pointer-events: none;
  }

  :global(.light) .hero-bg {
    background: 
      radial-gradient(ellipse 60% 40% at 50% -10%, rgba(14, 165, 199, 0.08), transparent 70%);
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }
  
  .hero-inner {
    max-width: 54rem;
  }
  
  .hero-headline {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    line-height: 1.2;
    background: linear-gradient(135deg, var(--color-foreground) 0%, var(--color-foreground) 60%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0;
  }

  @media (min-width: 480px) {
    .hero-headline {
      font-size: 2.5rem;
      line-height: 1.15;
    }
  }

  @media (min-width: 640px) {
    .hero-headline {
      font-size: 3.75rem;
      line-height: 1.1;
    }
  }

  @media (min-width: 1024px) {
    .hero-headline {
      font-size: 4.5rem;
      letter-spacing: -0.03em;
    }
  }

  .hero-subheadline {
    margin-top: 1.25rem;
    font-size: 1.0625rem;
    line-height: 1.65;
    color: var(--color-muted);
    max-width: 32rem;
    font-weight: 400;
  }

  @media (min-width: 480px) {
    .hero-subheadline {
      font-size: 1.125rem;
      max-width: 36rem;
    }
  }

  @media (min-width: 640px) {
    .hero-subheadline {
      margin-top: 2rem;
      font-size: 1.25rem;
      line-height: 1.75;
      max-width: 38rem;
    }
  }
  
  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  @media (min-width: 480px) {
    .hero-actions {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
      margin-top: 2.5rem;
    }
  }
  
  @media (min-width: 640px) {
    .hero-actions {
      margin-top: 3rem;
    }
  }

  .hero-actions .btn-primary,
  .hero-actions .btn-secondary {
    width: 100%;
    justify-content: center;
  }

  @media (min-width: 480px) {
    .hero-actions .btn-primary,
    .hero-actions .btn-secondary {
      width: auto;
    }
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
  
  .hero-scroll-indicator {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 5;
  }

  @media (min-width: 768px) {
    .hero-scroll-indicator {
      bottom: 2rem;
    }
  }
  
  .hero-scroll-line {
    width: 2px;
    height: 3rem;
    background: linear-gradient(to bottom, var(--color-primary), transparent);
    opacity: 0.6;
    animation: scrollLine 2s ease-in-out infinite;
  }

  @media (min-width: 768px) {
    .hero-scroll-line {
      width: 1px;
      height: 4rem;
      opacity: 0.5;
    }
  }
  
  @keyframes scrollLine {
    0% { transform: scaleY(0); transform-origin: top; opacity: 0; }
    30% { transform: scaleY(1); transform-origin: top; opacity: 1; }
    70% { transform: scaleY(1); transform-origin: bottom; opacity: 1; }
    100% { transform: scaleY(0); transform-origin: bottom; opacity: 0; }
  }
</style>
