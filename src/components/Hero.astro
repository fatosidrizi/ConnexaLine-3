---
export interface Props {
  headline: string;
  subheadline: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { headline, subheadline, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-grid"></div>
  
  <div class="container-custom hero-content">
    <div class="hero-inner">
      
      <h1 class="hero-headline animate-fade-up">
        <span class="hero-headline-tagline">Verbindung, die Zukunft schafft.</span>
      </h1>
      
      <p class="hero-subheadline animate-fade-up">
        {subheadline}
      </p>
      
      <div class="hero-actions animate-fade-up">
        {primaryCTA && (
          <a href={primaryCTA.href} class="btn-primary">
            {primaryCTA.text}
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        )}
        
        {secondaryCTA && (
          <a href={secondaryCTA.href} class="btn-secondary">
            {secondaryCTA.text}
          </a>
        )}
      </div>
      
    </div>
  </div>
  
  <div class="hero-scroll-indicator">
    <div class="hero-scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 80% 50% at 50% -20%, rgba(30, 200, 232, 0.12), transparent);
    pointer-events: none;
  }
  
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 60% 50% at 50% 50%, black, transparent);
    pointer-events: none;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }
  
  .hero-inner {
    max-width: 56rem;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(30, 200, 232, 0.1);
    border: 1px solid rgba(30, 200, 232, 0.2);
    border-radius: 9999px;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #1EC8E8;
    margin-bottom: 1.5rem;
  }
  
  .hero-badge-dot {
    width: 6px;
    height: 6px;
    background: #1EC8E8;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .hero-headline {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .hero-headline-brand {
    font-size: 1rem;
    font-weight: 600;
    color: #1EC8E8;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }
  
  .hero-headline-tagline {
    font-size: 2.75rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.025em;
    line-height: 1.1;
  }
  
  @media (min-width: 640px) {
    .hero-headline-tagline {
      font-size: 3.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-headline-tagline {
      font-size: 4.5rem;
    }
  }
  
  .hero-subheadline {
    margin-top: 1.5rem;
    font-size: 1.125rem;
    line-height: 1.75;
    color: #A7B0B8;
    max-width: 36rem;
  }
  
  @media (min-width: 640px) {
    .hero-subheadline {
      font-size: 1.25rem;
    }
  }
  
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2.5rem;
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }
  
  .hero-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  @media (min-width: 640px) {
    .hero-stats {
      gap: 2.5rem;
    }
  }
  
  .hero-stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .hero-stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
  }
  
  @media (min-width: 640px) {
    .hero-stat-value {
      font-size: 2rem;
    }
  }
  
  .hero-stat-label {
    font-size: 0.8125rem;
    color: #6B7280;
    font-weight: 500;
  }
  
  .hero-stat-divider {
    width: 1px;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.1);
  }
  
  .hero-scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .hero-scroll-line {
    width: 1px;
    height: 3rem;
    background: linear-gradient(to bottom, rgba(30, 200, 232, 0.5), transparent);
    animation: scrollLine 2s ease-in-out infinite;
  }
  
  @keyframes scrollLine {
    0%, 100% { opacity: 0.3; transform: scaleY(0.5); }
    50% { opacity: 1; transform: scaleY(1); }
  }
</style>
