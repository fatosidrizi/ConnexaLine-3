---
import { getTranslations, getLocaleFromUrl } from '../i18n/utils';

export interface Props {
  lang?: 'de' | 'en';
}

const currentLocale = Astro.props.lang || getLocaleFromUrl(Astro.url);
const t = getTranslations(currentLocale);

// Partner logos - these are placeholders that should be replaced with actual partner logos
const partners = [
  { name: "Deutsche Telekom", logo: "telekom" },
  { name: "Vodafone", logo: "vodafone" },
  { name: "1&1 Versatel", logo: "versatel" },
  { name: "Inexio", logo: "inexio" },
  { name: "Kreahub", logo: "kreahub" },
  { name: "4-Tech", logo: "4tech" },
];
---

<section class="partners-section">
  <div class="container-custom">
    <div class="partners-header animate-fade-up">
      <span class="partners-label">{t.partners.label}</span>
      <h2 class="partners-title">{t.partners.title}</h2>
      <p class="partners-description">{t.partners.description}</p>
    </div>

    <div class="partners-grid animate-fade-up">
      {partners.map((partner) => (
        <div class="partner-card">
          <div class="partner-logo">
            <span class="partner-name">{partner.name}</span>
          </div>
        </div>
      ))}
    </div>

    <p class="partners-note animate-fade-up">
      {t.partners.becomePartner} <a href="/contact" class="partners-link">{t.partners.contactUs}</a>
    </p>
  </div>
</section>

<style>
  .partners-section {
    padding: 5rem 0;
    background: var(--color-background-alt);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 1024px) {
    .partners-section {
      padding: 6rem 0;
    }
  }

  .partners-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  @media (min-width: 1024px) {
    .partners-header {
      margin-bottom: 4rem;
    }
  }

  .partners-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .partners-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-foreground);
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .partners-title {
      font-size: 2.25rem;
    }
  }

  .partners-description {
    font-size: 1.0625rem;
    color: var(--color-muted-dark);
    max-width: 40rem;
    margin: 0 auto;
    line-height: 1.7;
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 64rem;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .partners-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .partners-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .partner-card {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    min-height: 5rem;
  }

  .partner-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px -4px rgba(30, 200, 232, 0.1);
  }

  .partner-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .partner-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-muted-dark);
    text-align: center;
    transition: color 0.3s ease;
  }

  .partner-card:hover .partner-name {
    color: var(--color-foreground);
  }

  .partners-note {
    text-align: center;
    margin-top: 3rem;
    font-size: 0.9375rem;
    color: var(--color-muted-dark);
  }

  .partners-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .partners-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }
</style>
